<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CycleHeadActivity"
    >
  <com.example.lvchen.myapplication.view.CustomTextView
      android:id="@+id/customTextView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
      app:textColor="#00ff00"
      app:textSize="14sp"
      />
  <com.example.lvchen.myapplication.view.CustomGroup
      android:id="@+id/customGroup"
      android:layout_width="match_parent"
      android:layout_height="66dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/customTextView"
      app:scaleWidth="10dp"
      />
  <com.example.lvchen.myapplication.view.CustomImageView
      android:id="@+id/customImageView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:padding="10dp"
      app:imageScaleType="1"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/customGroup"
      app:titleText="hello andorid ! "
      app:titleTextColor="#ff0000"
      app:titleTextSize="30sp"
      />

  <com.example.lvchen.myapplication.view.ImageMoveView
      android:id="@+id/imageMoveView"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginTop="12dp"
      android:scaleType="centerCrop"
      android:src="@mipmap/ic_launcher"
      app:layout_constraintEnd_toEndOf="@+id/customImageView"
      app:layout_constraintTop_toBottomOf="@+id/customImageView"
      />
  <com.example.lvchen.myapplication.view.TextMoveView
      android:id="@+id/textMoveView"
      android:layout_width="wrap_content"
      android:layout_height="30dp"
      android:layout_centerInParent="true"
      android:layout_marginTop="32dp"
      android:background="#00ff00"
      android:gravity="center"
      android:text="我是美女"
      app:layout_constraintEnd_toEndOf="@+id/imageMoveView"
      app:layout_constraintTop_toBottomOf="@+id/imageMoveView"
      />
  <com.example.lvchen.myapplication.view.CustomRingProgress
      android:id="@+id/customRingProgress"
      android:layout_width="100dp"
      android:layout_height="100dp"
      app:circleWidth="10dp"
      app:firstColor="#Fe4646"
      app:layout_constraintEnd_toEndOf="@+id/textMoveView"
      app:layout_constraintTop_toBottomOf="@+id/textMoveView"
      app:secondColor="#00ff00"
      app:speed="10"
      />
  <com.example.lvchen.myapplication.view.CusVolumeView
      android:layout_width="100dp"
      android:layout_height="100dp"
      app:layout_constraintEnd_toEndOf="@+id/customRingProgress"
      app:layout_constraintTop_toBottomOf="@+id/customRingProgress"
      />
</androidx.constraintlayout.widget.ConstraintLayout>
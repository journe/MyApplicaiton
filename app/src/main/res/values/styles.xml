<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ClipTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="textAllCaps">false</item>
        <item name="buttonStyle">?android:attr/borderlessButtonStyle</item>
    </style>

    <style name="style_textsize">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Theme.Phonograph.Notification" parent="@android:style/TextAppearance.Material.Notification" />

    <style name="Theme.Phonograph.Notification.Title" parent="@android:style/TextAppearance.Material.Notification.Title" />

    <style name="PlanetDetailTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowEnterTransition">@transition/enter_transform_planet_detail</item>
        <item name="android:windowSharedElementEnterTransition">@transition/change_image_transform
        </item>
    </style>
    <!--带输入框-->
    <style name="inputDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <!--    <item name="android:windowFrame">@android:color/transparent</item>&lt;!&ndash; 边框 &ndash;&gt;-->
        <!--    <item name="android:windowIsFloating">true</item>&lt;!&ndash; 是否浮现在activity之上 &ndash;&gt;-->
        <!--    <item name="android:windowIsTranslucent">false</item>&lt;!&ndash; 半透明 &ndash;&gt;-->
        <!--    <item name="android:windowNoTitle">true</item>&lt;!&ndash; 无标题 &ndash;&gt;-->
        <!--    <item name="android:windowBackground">@android:color/transparent</item>&lt;!&ndash; 自己想要的背景 &ndash;&gt;-->
        <!--    <item name="android:backgroundDimEnabled">true</item>&lt;!&ndash; 模糊 &ndash;&gt;-->
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item><!--显示软件盘-->
    </style>


</resources>
